{
  "name": "shopify-buy",
  "version": "1.0.0-alpha.1",
  "description": "The JS Buy SDK is a lightweight library that allows you to build ecommerce into any website. It is based on Shopify's API and provides the ability to retrieve products and collections from your shop, add products to a cart, and checkout.",
  "main": "index.js",
  "jsnext:main": "index.es.js",
  "repository": "git@github.com:Shopify/js-buy-sdk.git",
  "scripts": {
    "prepublish": "yarn run build",
    "build": "yarn run schema:transform && rollup -c",
    "start": "yarn run clean && yarn run setup-paths && concurrently 'yarn run test:web-deps' 'yarn run test:livereload-server' 'yarn run test:watch' 'http-server -p 4200 .tmp/test' 'yarn run print-start-message'",
    "clean": "rimraf .tmp types.js",
    "setup-paths": "mkdir -p .tmp/test",
    "test": "yarn run clean && yarn run setup-paths && yarn run test:node-deps && yarn run mocha",
    "test:with-optimized-types": "yarn run clean && yarn run setup-paths && yarn run test:node-deps-optimized && yarn run mocha",
    "test:watch": "cross-env BABEL_ENV='browser' node -- scripts/test-build-watch.js --with-dependency-tracking .tmp/test/tests.js",
    "test:web-deps": "concurrently 'yarn run test:copy-web-deps' 'yarn run schema:transform-to-types'",
    "test:node-deps": "yarn run schema:transform && cross-env BABEL_ENV='node' node -- scripts/test-build-node.js --with-dependency-tracking .tmp/test/node-tests.js",
    "test:node-deps-optimized": "yarn run schema:transform && cross-env BABEL_ENV='node' node -- scripts/test-build-node.js --with-optimized-types .tmp/test/node-tests.js",
    "test:copy-web-deps": "cp test/index.html node_modules/mocha/mocha.* node_modules/jquery/dist/jquery.slim.min.js .tmp/test/ && cp node_modules/expect.js/index.js .tmp/test/expect.js",
    "test:livereload-server": "node scripts/livereload.js",
    "mocha": "mocha -u tdd $(yarn run mocha:reporter-args 2>&1 >/dev/null) .tmp/test/node-tests.js",
    "mocha:reporter-args": "test -n \"${CI}\" && >&2 echo --reporter xunit --reporter-options output=$CIRCLE_TEST_REPORTS/junit/mocha-$RANDOM.xml || true",
    "lint": "eslint --max-warnings 0 -c .eslintrc.json $(yarn run lint:reporter-args 2>&1 >/dev/null) src/ test/",
    "lint:reporter-args": "test -n \"${CI}\" && >&2 echo -o $CIRCLE_TEST_REPORTS/junit/eslint.xml -f junit",
    "print-start-message": "wait-on file:.tmp/test/index.html file:.tmp/test/tests.js tcp:35729 tcp:4200 file:types.js && echo \"\n\n⚡️⚡️⚡️  Good to go at http://localhost:4200 ⚡️⚡️⚡️\"",
    "schema:refresh": "rimraf types.js && yarn run schema:fetch && yarn run schema:transform-to-types",
    "schema:fetch": "graphql-js-schema-fetch --url 'https://graphql.myshopify.com/api/graphql' --header 'Authorization: Basic MzUxYzEyMjAxN2QwZjJhOTU3ZDMyYWU3MjhhZDc0OWM=' | jq '.' > schema.json",
    "schema:transform": "concurrently 'yarn run schema:transform-to-types' 'yarn run schema:transform-to-optimized-types'",
    "schema:transform-to-types": "graphql-js-schema --schema-file schema.json --outdir . --schema-bundle-name 'Types' --bundle-only",
    "schema:transform-to-optimized-types": "graphql-js-schema --whitelist-type={$(node scripts/profiled-types-to-whitelist-args.js)} --schema-file schema.json --outdir . --schema-bundle-name 'OptimizedTypes' --bundle-only"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "graphql-js-client": "0.4.2",
    "graphql-js-schema": "0.5.0",
    "graphql-js-schema-fetch": "1.1.2",
    "rollup-plugin-remap": "0.0.3",
    "Base64": "0.3.0",
    "babel": "6.5.2",
    "babel-cli": "6.18.0",
    "babel-core": "6.20.0",
    "babel-plugin-external-helpers": "6.18.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "babel-preset-shopify": "15.0.1",
    "concurrently": "3.1.0",
    "cross-env": "3.1.3",
    "eslint": "3.8.1",
    "eslint-plugin-shopify": "14.0.0",
    "eslint-test-generator": "1.0.5",
    "expect.js": "0.3.1",
    "fb-watchman": "1.9.0",
    "fetch-mock": "5.8.1",
    "fs-extra": "1.0.0",
    "http-server": "0.9.0",
    "jquery": "3.1.1",
    "minimist": "1.2.0",
    "mocha": "3.1.2",
    "node-fetch": "1.6.3",
    "node-jq": "0.3.13",
    "rimraf": "2.5.4",
    "rollup": "0.37.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-json": "2.1.0",
    "rollup-plugin-multi-entry": "2.0.1",
    "rollup-plugin-node-builtins": "2.0.0",
    "rollup-plugin-node-globals": "1.0.9",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-pluginutils": "1.5.2",
    "selenium-standalone": "5.5.0",
    "tiny-lr": "1.0.2",
    "wait-on": "1.5.3",
    "whatwg-fetch": "0.10.1"
  },
  "livereloadPort": 35729
}
