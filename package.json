{
  "name": "shopify-buy",
  "version": "0.5.4",
  "description": "The JS Buy SDK is a lightweight library that allows you to build ecommerce into any website. It is based on Shopify's API and provides the ability to retrieve products and collections from your shop, add products to a cart, and checkout.",
  "main": "lib/shopify.js",
  "jsnext:main": "es/shopify.js",
  "repository": "git@github.com:Shopify/js-buy-sdk.git",
  "scripts": {
    "build:dev": "rollup -c --environment BABEL_ENV:node",
    "build:prod": "rollup -c --environment BABEL_ENV:node,BUILD_MODE:production",
    "start": "npm run clean && npm run setup-paths && concurrently 'npm run test:web-deps' 'npm run test:livereload-server' 'npm run test:watch' 'http-server -p 4200 .tmp/test' 'npm run -s print-start-message'",
    "clean": "rimraf .tmp types.js",
    "setup-paths": "mkdir -p .tmp/test",
    "test": "npm run clean && npm run setup-paths && npm run test:node-deps && npm run -s mocha",
    "test:watch": "cross-env BABEL_ENV='browser' node -- scripts-graphql/test-build-watch.js --with-dependency-tracking .tmp/test/tests.js",
    "test:web-deps": "concurrently 'npm run test:copy-web-deps' 'npm run schema:transform-to-types'",
    "test:node-deps": "npm run schema:transform-to-types && cross-env BABEL_ENV='node' node -- scripts-graphql/test-build-node.js --with-dependency-tracking .tmp/test/node-tests.js",
    "test:copy-web-deps": "cp test-graphql/index.html node_modules/mocha/mocha.* node_modules/jquery/dist/jquery.slim.min.js .tmp/test/ && cp node_modules/expect.js/index.js .tmp/test/expect.js",
    "test:livereload-server": "node scripts-graphql/livereload.js",
    "mocha": "mocha -u tdd $(npm run -s mocha:reporter-args) .tmp/test/node-tests.js",
    "mocha:reporter-args": "[ -n \"${CI}\" ] && echo --reporter xunit --reporter-options output=$CIRCLE_TEST_REPORTS/junit/mocha.xml",
    "lint": "eslint --max-warnings 0 -c .eslintrc.json $(npm run -s lint:reporter-args) src-graphql/ test-graphql/",
    "lint:reporter-args": "[ -n \"${CI}\" ] && echo -o $CIRCLE_TEST_REPORTS/junit/eslint.xml -f junit",
    "print-start-message": "wait-on file:.tmp/test/index.html file:.tmp/test/tests.js tcp:35729 tcp:4200 file:types.js && echo \"\n\n⚡️⚡️⚡️  Good to go at http://localhost:4200 ⚡️⚡️⚡️\"",
    "schema:refresh": "rimraf types.js && npm run schema:fetch && npm run schema:transform-to-types",
    "schema:fetch": "graphql-js-schema-fetch --url 'https://graphql.myshopify.com/api/graphql' --header 'Authorization: Basic MzUxYzEyMjAxN2QwZjJhOTU3ZDMyYWU3MjhhZDc0OWM=' | jq '.' > schema.json",
    "schema:transform-to-types": "graphql-js-schema --schema-file schema.json --outdir . --schema-bundle-name 'Types' --bundle-only"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@shopify/graphql-js-client": "0.1.1",
    "@shopify/graphql-js-schema": "0.2.3",
    "@shopify/graphql-js-schema-fetch": "1.1.0",
    "@shopify/rollup-plugin-remap": "0.0.3",
    "Base64": "0.3.0",
    "babel": "6.5.2",
    "babel-cli": "6.18.0",
    "babel-core": "6.20.0",
    "babel-plugin-external-helpers": "6.18.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "babel-preset-shopify": "15.0.1",
    "concurrently": "3.1.0",
    "cross-env": "3.1.3",
    "eslint": "3.8.1",
    "eslint-plugin-shopify": "14.0.0",
    "eslint-test-generator": "1.0.5",
    "expect.js": "0.3.1",
    "fb-watchman": "1.9.0",
    "fetch-mock": "5.8.1",
    "fs-extra": "1.0.0",
    "http-server": "0.9.0",
    "jquery": "3.1.1",
    "minimist": "1.2.0",
    "mocha": "3.1.2",
    "node-fetch": "1.6.3",
    "node-jq": "0.3.13",
    "rollup": "0.37.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-json": "2.1.0",
    "rollup-plugin-multi-entry": "2.0.1",
    "rollup-plugin-node-builtins": "2.0.0",
    "rollup-plugin-node-globals": "1.0.9",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-pluginutils": "1.5.2",
    "selenium-standalone": "5.5.0",
    "tiny-lr": "1.0.2",
    "wait-on": "1.5.3",
    "wdio-dot-reporter": "0.0.5",
    "wdio-junit-reporter": "0.1.0",
    "wdio-mocha-framework": "0.3.1",
    "webdriverio": "4.0.9",
    "whatwg-fetch": "0.10.1",
    "yuidoc-lucid-theme": "git+ssh://git@github.com:Shopify/yuidoc-lucid-theme.git#c9c62ba",
    "yuidocjs": "0.10.2"
  },
  "livereloadPort": 35729
}
