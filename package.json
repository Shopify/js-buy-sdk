{
  "name": "shopify-buy",
  "version": "0.2.2",
  "description": "The JS Buy SDK is a lightweight library that allows you to build ecommerce into any website. It is based on Shopify's API and provides the ability to retrieve products and collections from your shop, add products to a cart, and checkout.",
  "main": "lib/shopify.js",
  "repository": "git@github.com:Shopify/js-buy-sdk.git",
  "scripts": {
    "start": "npm run dir-setup-dist-test && npm run dir-setup-dist && concurrently 'npm run build-test-sdk' 'npm run watch-test' 'http-server -p 4200 .dist-test/'",
    "test": "npm run test-setup && testem ci",
    "test-examples": "npm run test-setup && npm run cp-examples && npm run css-examples && npm run test-run-example",
    "test-ci": "npm run test-setup && testem ci -R xunit > tests.xml",
    "examples": "npm run dir-setup-dist-test && npm run dir-setup-dist && npm run cp-examples && npm run css-examples && http-server -p 4200 .dist-test/",
    "build": "npm run dir-setup-dist && npm run build-all && npm run minify-all",
    "prepublish": "npm run commonjs",
    "postinstall": "selenium-standalone install",
    "doc-build": "./scripts/yuidoc",
    "doc-serve": "jekyll serve -s docs",
    "clean": "rimraf dist/; rimraf .dist-test/; rimraf lib/",
    "lint": "eslint src/",
    "------ Scripts used to build JS for distribution": null,
    "build-all": "concurrently 'npm run umd' 'npm run umd-polyfilled' 'npm run commonjs'",
    "umd": "rollup -f cjs src/shopify.js | node scripts/runBabel umd > dist/shopify-buy.umd.js",
    "umd-polyfilled": "rollup --config .rollup.config.umd.polyfilled.js | node scripts/runBabel umd > dist/shopify-buy.umd.polyfilled.js",
    "commonjs": "cross-env BABEL_ENV=commonjs VERSION=$(get-project-version --template v{{version}}-{{commit}}) babel -d lib/ src/",
    "------ Scripts to compile JS for testing": null,
    "test-setup": "npm run dir-setup-dist-test && npm run dir-setup-dist && npm run build-test && npm run build-test-sdk",
    "build-test": "concurrently 'npm run build-tests-polyfill' 'npm run amd' 'npm run build-tests'",
    "watch-test": "concurrently 'npm run build-tests-polyfill' 'npm run watch-amd' 'npm run watch-tests'",
    "###### modules will build a qunit shim with amd modules and then append actual tests": null,
    "###### it's wierd to do a umd build here but it's done because the umd brings in polyfills": null,
    "build-tests": "npm run build-tests-qunit-shim && npm run build-tests-amd",
    "watch-tests": "npm run build-tests-qunit-shim && npm run watch-tests-amd",
    "build-tests-polyfill": "npm run umd-polyfilled && npm run copy-umd-build",
    "build-tests-qunit-shim": "cross-env BABEL_ENV=amd-test-qunit-shim babel tests/shims/ > .dist-test/qunit-shim.js",
    "build-tests-amd": "cross-env BABEL_ENV=amd-tests babel tests/ > .dist-test/tests.js",
    "watch-tests-amd": "cross-env BABEL_ENV=amd-tests babel -w src/ -o .dist-test/tests.js tests",
    "build-test-sdk": "concurrently 'npm run copy-qunit' 'npm run copy-html' && node scripts/build-testing-sdk.js > .dist-test/sdk-testing.js",
    "amd": "BABEL_ENV=amd VERSION=$(get-project-version --template v{{version}}-{{commit}}) babel src/ > .dist-test/shopify-buy.amd.js",
    "watch-amd": "nodemon --exec 'npm run amd' -w src/",
    "copy-umd-build": "cp dist/shopify-buy.umd.polyfilled.js .dist-test/shopify-buy.umd.polyfilled.js",
    "copy-qunit": "cp node_modules/qunitjs/qunit/qunit.js .dist-test/qunit.js && cp node_modules/qunitjs/qunit/qunit.css .dist-test/qunit.css",
    "copy-html": "cp tests/index.html .dist-test/index.html",
    "------ Scripts for testing-examples": null,
    "test-run-example": "concurrently -k --success first 'selenium-standalone start' 'http-server -p 4200 .dist-test/' 'npm run test-run-wdio'",
    "test-run-wdio": "wait-on tcp:4444 && wait-on tcp:4200 && wdio .dist-test/examples/cart/wdio.conf.js",
    "css-examples": "concurrently 'npm run css-cart' 'npm run css-checkout'",
    "css-cart": "node-sass examples/cart/styles/styles.scss > .dist-test/examples/cart/index.css",
    "css-checkout": "node-sass examples/checkout/styles/styles.scss > .dist-test/examples/checkout/index.css",
    "cp-examples": "cp -r examples .dist-test/examples",
    "mk-examples": "npm run mk-cart && npm run mk-checkout",
    "mk-cart": "mkdir -p .dist-test/examples/cart/",
    "mk-checkout": "mkdir -p .dist-test/examples/checkout/",
    "------ Scripts to minify code": null,
    "minify-all": "concurrently 'npm run minify-umd' 'npm run minify-umd-polyfilled'",
    "minify-umd": "uglifyjs --compress --mangle -o dist/shopify-buy.umd.min.js -- dist/shopify-buy.umd.js",
    "minify-umd-polyfilled": "uglifyjs --compress --mangle -o dist/shopify-buy.umd.polyfilled.min.js -- dist/shopify-buy.umd.polyfilled.js",
    "------ The following are all file system operations used to make, and copy existing files": null,
    "dir-setup-dist": "rimraf dist/; mkdir dist/",
    "dir-setup-dist-test": "rimraf .dist-test/; mkdir .dist-test/"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "1.3.3"
  },
  "devDependencies": {
    "Base64": "0.3.0",
    "aws-sdk": "2.2.44",
    "babel-cli": "6.11.4",
    "babel-core": "6.13.2",
    "babel-eslint": "6.1.2",
    "babel-plugin-add-shopify-header": "1.0.3",
    "babel-plugin-eslint-test-generator": "1.0.1",
    "babel-plugin-rename-umd-globals": "0.0.3",
    "babel-plugin-transform-es2015-modules-amd": "6.8.0",
    "babel-plugin-transform-es2015-modules-umd": "6.12.0",
    "babel-plugin-transform-inline-environment-variables": "6.8.0",
    "babel-preset-es2015": "6.9.0",
    "concurrently": "2.2.0",
    "core-js": "~2.4.1",
    "cross-env": "2.0.0",
    "eslint": "3.3.1",
    "eslint-config-nightmare-mode": "2.3.0",
    "fake-xml-http-request": "1.4.0",
    "get-project-version": "1.0.0",
    "get-stdin": "5.0.1",
    "git-rev": "0.2.1",
    "glob": "7.0.5",
    "http-server": "0.9.0",
    "js-string-escape": "1.0.0",
    "loader.js": "3.5.0",
    "mime-types": "2.1.10",
    "mocha": "2.5.3",
    "node-sass": "3.8.0",
    "nodegit": "0.13.0",
    "nodemon": "1.10.0",
    "pretender": "0.10.1",
    "qunitjs": "1.20.0",
    "rimraf": "2.5.4",
    "rollup": "0.34.7",
    "rollup-plugin-commonjs": "3.3.1",
    "rollup-plugin-node-resolve": "2.0.0",
    "route-recognizer": "0.1.9",
    "selenium-standalone": "5.5.0",
    "testem": "0.9.11",
    "uglify-js": "2.7.0",
    "wait-on": "1.5.2",
    "wdio-dot-reporter": "0.0.5",
    "wdio-junit-reporter": "0.1.0",
    "wdio-mocha-framework": "0.3.1",
    "webdriverio": "4.0.9",
    "whatwg-fetch": "0.10.1",
    "yuidocjs": "0.10.0"
  }
}
