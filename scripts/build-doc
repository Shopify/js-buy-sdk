#!/usr/bin/env node

/* eslint-env node */

require('./util/work-from-root')();
var buildOptions = {
  docsBranchName: 'gh-pages',
  rmSrcDir: true,
  commitDocs: false
};

buildOptions.commitDocs = process.argv.filter(function(argument) {
	return argument == 'commit';
}).length == 0 ? false : true;

var docBuilder = require('./util/doc-builder')(buildOptions);

console.log('Building ....');
docBuilder.build().then(() => {
  console.log('\nDone building');
}).catch(error => {
  console.error('\nError', error);
});
